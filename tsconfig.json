{
    "compilerOptions": {
        "lib": ["dom", "es6"],
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true
    },
    "exclude": [
        "./node_modules",
        "./packages/*/node_modules",
        "./packages/*/lib"
    ]
}